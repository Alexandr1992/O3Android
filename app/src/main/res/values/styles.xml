<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spark_SparkViewStyle">@style/MySparkViewStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/NoShadowActionBar</item>
        <item name="secondaryBackgroundColor">@color/colorGhostWhite</item>
        <item name="defaultTextColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="android:colorPrimaryDark">@color/colorGhostWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorGhostWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spark_SparkViewStyle">@style/MySparkViewStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/NoShadowActionBar</item>
        <item name="defaultTextColor">@color/colorBlack</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGrey</item>
        <item name="primaryBackgroundColor">@color/colorGhostWhite</item>
        <item name="secondaryBackgroundColor">@color/colorWhite</item>
        <item name="android:editTextColor">?attr/defaultTextColor</item>
        <item name="colorControlNormal">@color/colorSubtitleGrey</item>
        <item name="android:textColorHint">@color/colorSubtitleGrey</item>
        <item name="android:listDivider">@color/colorGhostWhite</item>
        <item name="android:dividerHeight">1.5dp</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MyPopupMenu"
        parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">?attr/primaryBackgroundColor</item>

    </style>
    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGhostBlack</item>
        <item name="android:colorPrimaryDark">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spark_SparkViewStyle">@style/MySparkViewStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/NoShadowActionBar</item>
        <item name="defaultTextColor">@color/colorGhostWhite</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGreyDark</item>
        <item name="primaryBackgroundColor">@color/colorBlack</item>
        <item name="secondaryBackgroundColor">@color/colorGhostBlack</item>
        <item name="android:editTextColor">?attr/defaultTextColor</item>
        <item name="android:textColorHint">@color/colorSubtitleGrey</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:listDivider">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorSubtitleGrey</item>
        <item name="android:dividerHeight">1.5dp</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="AppTheme.Dark.NoTopBar" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.White.NoTopBar" parent="AppTheme.White">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name = "AppTheme.Dialog.Light" parent ="Theme.AppCompat.Light.Dialog">
        <item name="defaultTextColor">@color/colorBlack</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGrey</item>
        <item name="primaryBackgroundColor">@color/colorWhite</item>
        <item name="secondaryBackgroundColor">@color/colorGhostWhite</item>
    </style>

    <style name = "AppTheme.Dialog.Dark" parent ="Theme.AppCompat.Light.Dialog">
        <item name="defaultTextColor">@color/colorWhite</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGrey</item>
        <item name="primaryBackgroundColor">@color/colorBlack</item>
        <item name="secondaryBackgroundColor">@color/colorGhostBlack</item>
    </style>

    <style name="AppTheme.NoTopBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="defaultTextColor">@color/colorBlack</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGrey</item>
        <item name="primaryBackgroundColor">@color/colorWhite</item>
        <item name="secondaryBackgroundColor">@color/colorGhostWhite</item>
    </style>

    <style name="AppTheme.NoTopBar.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="defaultTextColor">@color/colorGhostWhite</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGreyDark</item>
        <item name="primaryBackgroundColor">@color/colorBlack</item>
        <item name="secondaryBackgroundColor">@color/colorGhostBlack</item>
    </style>

    <style name="AppTheme.NoTopBar.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorGhostWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="defaultTextColor">@color/colorBlack</item>
        <item name="defaultSubtitleTextColor">@color/colorSubtitleGrey</item>
        <item name="primaryBackgroundColor">@color/colorWhite</item>
        <item name="secondaryBackgroundColor">@color/colorGhostWhite</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorSubtitleGrey</item>
    </style>


    <style name="NoShadowActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="MySparkViewStyle" parent="@style/spark_SparkView">
        <item name="spark_lineColor">@color/colorPrimary</item>
        <item name="spark_lineWidth">@dimen/line_width</item>
        <item name="spark_cornerRadius">@dimen/corner_radius</item>
        <item name="spark_fill">false</item>

        <item name="spark_baseLineColor">@color/colorAccent</item>
        <item name="spark_baseLineWidth">@dimen/base_line_width</item>

        <item name="spark_scrubLineColor">@color/colorPrimary</item>
        <item name="spark_scrubLineWidth">@dimen/scrub_line_width</item>
        <item name="spark_scrubEnabled">true</item>

        <item name="spark_animateChanges">true</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/secondaryBackgroundColor</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">?attr/defaultSubtitleTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="AccentButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CancelButton.Rounded" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/cancel_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AccentButton.Rounded" parent="AccentButton">
        <item name="android:background">@drawable/accent_button_background</item>
    </style>

    <style name="AccentButton.Rounded.Trade" parent="AccentButton">
        <item name="android:background">@drawable/trade_button_background</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="GasSyncButton" parent="BorderLessButton">
        <item name="android:background">@drawable/gas_sync_button</item>
        <item name = "android:textAllCaps">false</item>
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="GasClaimButton" parent="BorderLessButton">
        <item name="android:background">@drawable/gas_claim_button</item>
        <item name = "android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="PrimaryButton.Rounded" parent="PrimaryButton">
        <item name="android:background">@drawable/rounded_button_primary</item>
    </style>


    <style name="AlertButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/disable_alert_button</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="BorderLessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="PinPadButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:background">?attr/secondaryBackgroundColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>


    <style name="BorderLessButton.Accent" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="BorderLessButton.Ghost" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?attr/secondaryBackgroundColor</item>>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>


    <style name="BoldText">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="TabLayoutAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="RegularText.Small">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="RegularText.Bold">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="RegularText.Small.Gray">
        <item name="android:textColor">?attr/defaultSubtitleTextColor</item>
    </style>

    <style name="RegularText.Small.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RegularText.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RegularText.Gain">
        <item name="android:textColor">@color/colorGain</item>
    </style>

    <style name="RegularText.Primary.Bold">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="NotificationText">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:color">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:color">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegularSubtitleText">
        <item name="android:textColor">?attr/defaultSubtitleTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="RegularSubtitleText.Gain">
        <item name="android:textColor">@color/colorGain</item>
    </style>

    <style name="IntervalButtonText">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="IntervalButtonText.Selected">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IntervalButtonText.NotSelected">
        <item name="android:textColor">?attr/defaultSubtitleTextColor</item>
    </style>

    <style name="PortfolioHeader">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PortfolioHeader.WalletType">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PortfolioHeader.PortfolioValue">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PortfolioHeader.PercentChange">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorGain</item>
    </style>


    <style name="TableRowTitleText">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="TableRowNumberText">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:colorPrimaryDark">@color/zxing_transparent</item>
        <item name="android:background">@drawable/bottom_sheet_rounded_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorPrimaryDark">@color/zxing_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
</resources>
